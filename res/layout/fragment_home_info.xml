<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/green_1"
     >

    <TextView
        style="@style/home_info_text"
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        style="@style/home_info_text"
        android:id="@+id/current_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:text="@string/current_weight_desc"/>
    
    <TextView
        style="@style/home_info_text"
        android:id="@+id/goal_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_weight_tv"
        android:text="@string/goal_weight_desc"/>
    
    <TextView
        style="@style/home_info_text"
        android:id="@+id/goal_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_weight_tv"
        android:text="@string/goal_date_desc"/>
    
    <TextView
        style="@style/home_info_text"
        android:id="@+id/time_remaining_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_date_tv"
        android:text="@string/time_remaining_desc"/>

</RelativeLayout>